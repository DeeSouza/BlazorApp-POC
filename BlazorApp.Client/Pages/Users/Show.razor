@page "/users/{id}"

@using BlazorApp.Shared
@inject HttpClient Http

<h1>Users @Id</h1>

@if (user == null)
{
    <p><em>Loading...</em></p>
}
else
{
        <p>
            <strong>ID: </strong> @user.Id
        </p>
}

@code {
    [Parameter]
    public string Id { get; set; }
}

@code{
    UserShared user;

    protected override async Task OnInitAsync()
    {
        user = await Http.GetJsonAsync<UserShared>("api/users/" + Id);
    }
}